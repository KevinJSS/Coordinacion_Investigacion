<%= form_with(model: record) do |form| %>
  <div class="row mb-3">
    <div class="col-6">
      <%= form.label "Número", style: "display: block" %>
      <%= form.number_field :number, class: "form-control mt-1", placeholder: "Número de acta" %>
    </div>
    <div class="col-6">
      <%= form.label "Fecha", style: "display: block" %>
      <%= form.date_field :date, class: "form-control mt-1" %>
    </div>
  </div>
  <div class="row mb-3">
    <%= form.label "Documento de acta", style: "display: block" %>
    <div style="margin:0 .1rem;">
      <%= form.file_field :file, class: "form-control mt-1", direct_upload: true %>
    </div>
  </div>
  <br>
  <div class="row pb-2">
    <%= render "records/articles/articles_form", record: record %>
  </div>
<% end %>
