<%= form_with(model: record) do |f| %>
  <div data-controller="nested-form" >
    <div class="row justify-content-md-center d-flex align-items-center mb-3">
      <div class="col-6 font-weight-bold">
        <h4>ART√çCULOS</h4>
      </div>
      <div class="col-6 mt-2 text-end" data-nested-form-target="add_item">
        <%= link_to "#", data: { action: "nested-form#add_association" }, class:"btn btn-sm btn-primary px-3" do %>
          <i class="bi bi-plus-circle-dotted"></i>
          ARTICULO
        <% end %>
      </div>
    </div>
    <hr>
    <span data-nested-form-target="reference"></span> <!-- Used as a reference point to add articles at the end -->
    <template data-nested-form-target="template">
      <%= f.fields_for :articles, Article.new, child_index: "TEMPLATE_RECORD" do |article| %>
        <div>
          <%= render "records/articles/articles_fields", f: article, record: record %>
        </div>
      <% end %>
    </template>
  </div>
  <div class="row pt-4">
    <div class="col text-center">
      <%= button_tag(:class => "btn btn-primary") do %>
        <i class="bi bi-check-lg"></i>
        Guardar
      <% end %>
    </div>
  </div>
<% end %>
